{{!-- invitation script --}}
<script>
$('.invite').click(function() {
  var req = $(this).data('req');
  alert('Invitation sent!');
  $.post('/invite', req);
});

$('.rm-notif').click(function(e) {
  e.preventDefault();
  $(this).parent().fadeOut().remove();
  var req = $(this).data('req');
  $.post('/user/' + req.user_id + '/edit', req);
  
});
</script>