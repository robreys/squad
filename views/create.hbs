{{#if edit}}
<h1>Edit team: {{name}}</h1>
<form action="/squad/{{_id}}/edit" method="post">
{{else}}
<h1>create team page</h1>
<form action="/create" method="post">
{{/if}}



          
            <div class="field-wrap">
              {{#if edit}}
              <label class="active highlight">
              {{else}}
              <label>
              {{/if}}
                SQUAD Name<span class="req">*</span>
              </label>

              <input name="name" style="color: white;" type="text" required autocomplete="off" value="{{name}}" />
            </div>

       

          <div class="field-wrap">
            {{#if edit}}
            <label class="active highlight">
            {{else}}
            <label>
            {{/if}}
              SQUAD Description<span class="req">*</span>
            </label>
            <input name="description" style="color: white;" type="text"required autocomplete="off" value="{{description}}"/>
          </div>

          <div class="field-wrap">
            {{#if edit}}
            <label class="active highlight">
            {{else}}
            <label>
            {{/if}}
              Tags: (ie: basketball, coding)<span class="req">*</span>
            </label>
            <input name="tags" style="color: white;" type="text"required autocomplete="off" value="{{tags}}"/>
          </div>

          {{#if edit}}
            <button type="submit" class="button button-block"/>Edit</button>
          {{else}}
            <button type="submit" class="button button-block"/>Create</button>
          {{/if}}
</form>
