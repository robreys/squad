


<style>
    .thumblist{
        float: left;
        height: 200px;
        width: 200px;
        margin: 5px;
        overflow: hidden;
    }

    .thumblist img {
          display: inline-block;
          min-width: 100%;
          min-height: 100%;
          -ms-interpolation-mode: bicubic; /* Better image scaling in IE */
      }
    </style>

  <body class="o-page p-blog">
    <div id="page">
      <div id="header">
        <div class="header-content">
          <a href="/home" class="p-link-home"><img src="/img/icons/home-24.ico" width="16px" ></a>
          
          <a href="javascript:history.back();" class="p-link-back"><img src="/img/icons/arrow-24.ico" width="16px;"></a>
        </div>
      </div>
      <div class="bannerPane">
        <div class="overlay"></div>
        <div class="s-banner-content">
          <div><img  width="100" src="/img/squad-crop.png" /></div>
          <strong>{{first_name}} {{last_name}}</strong>
          
        </div>
      </div>
      <div id="content">
        
        
          {{#if manage}}
            <h3 class="title"><img src="/img/icons/tag-24.ico" style="padding-right: 10px"><i></i>Your squads!</h3>
          {{else}}
            <h3 class="title"><img src="/img/icons/tag-24.ico" style="padding-right: 10px"><i></i>Squads based on your tags!</h3>
          {{/if}}

          {{#each squads}}
          <article>
          <a href="/squad/{{_id}}">
            <div class="article-img-pane thumblist">
              <img src="{{cover}}" width="150px"/>
            </div>
            <h2>{{name}}</h2>
            <p class="posts-summary">
              {{description}}
            </p>
          </a>
          <div class="a-meta">
            <span>
            <div class="blog-tags" >
                  <ul  style="position: relative;">
                  <li><img src="/img/icons/tag-16.ico"></li>
                  {{#each tags}} <li><a href="#">{{this}}</a></li>{{/each}}

                  </ul>
            </div>
          </span>
            <img src="/img/icons/conference-16.ico"> {{members.length}}
          </div>
        </article>
        {{/each}}
        
        

        
        
      </div>
      <div class="subFooter">
        <div>A Squad Company.</div>
        <div>
          <a href="/" class="p-link-logout" style="font-size: 12px;"> &nbsp Logout</a>
          <a href="/help" class="p-link-logout" style="font-size: 12px;"> &nbsp Help</a>
        </div>
      </div>
      
      
      
    </div>
  </body>
